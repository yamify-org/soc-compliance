---
layout: null
sitemap:
  priority: 1.0
  changefreq: 'weekly'
  lastmod: 2023-11-15T00:00:00+01:00
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for page in site.pages %}
    {% unless page.sitemap.exclude == true %}
      <url>
        <loc>{{ site.url }}{{ site.baseurl }}{{ page.url | remove: 'index.html' }}</loc>
        <lastmod>{{ page.last_modified_at | date_to_xmlschema | default: site.time | date_to_xmlschema }}</lastmod>
        <changefreq>{{ page.sitemap.changefreq | default: 'monthly' }}</changefreq>
        <priority>{{ page.sitemap.priority | default: 0.5 | round: 1 }}</priority>
      </url>
    {% endunless %}
  {% endfor %}
  
  {% for post in site.posts %}
    <url>
      <loc>{{ site.url }}{{ site.baseurl }}{{ post.url | remove: 'index.html' }}</loc>
      <lastmod>{{ post.last_modified_at | date_to_xmlschema | default: post.date | date_to_xmlschema }}</lastmod>
      <changefreq>{{ post.sitemap.changefreq | default: 'monthly' }}</changefreq>
      <priority>{{ post.sitemap.priority | default: 0.8 | round: 1 }}</priority>
    </url>
  {% endfor %}
  
  {% for collection in site.collections %}
    {% unless collection.output == false or collection.label == 'posts' %}
      {% for doc in collection.docs %}
        {% unless doc.sitemap.exclude == true %}
          <url>
            <loc>{{ site.url }}{{ site.baseurl }}{{ doc.url | remove: 'index.html' }}</loc>
            <lastmod>{{ doc.last_modified_at | date_to_xmlschema | default: doc.date | date_to_xmlschema }}</lastmod>
            <changefreq>{{ doc.sitemap.changefreq | default: 'monthly' }}</changefreq>
            <priority>{{ doc.sitemap.priority | default: 0.6 | round: 1 }}</priority>
          </url>
        {% endunless %}
      {% endfor %}
    {% endunless %}
  {% endfor %}
</urlset>
